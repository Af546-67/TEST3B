<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.aashish.aashishpizzaordering.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Aashish Pizza Ordering System" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <GridPane alignment="CENTER" hgap="10" vgap="10">
        <Label text="Customer Name:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Mobile Number:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="mobileField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="Pizza Size:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="3">
            <CheckBox fx:id="xlBox" text="XL"/>
            <CheckBox fx:id="lBox" text="L"/>
            <CheckBox fx:id="mBox" text="M"/>
            <CheckBox fx:id="sBox" text="S"/>
        </HBox>

        <Label text="Number of Toppings:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <Spinner fx:id="toppingsSpinner" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
    </GridPane>

    <HBox spacing="10">
        <Button text="Add" onAction="#handleAdd"/>
        <Button text="Update" onAction="#handleUpdate"/>
        <Button text="Delete" onAction="#handleDelete"/>
        <Button text="Clear" onAction="#handleClear"/>
        <Button text="Load" onAction="#handleLoad"/>
    </HBox>

    <TableView fx:id="orderTable" VBox.vgrow="ALWAYS">

    </TableView>
</VBox>
